---
import ArrowCard from "@components/ArrowCard.astro";
import BackToPrevious from "@components/BackToPrevious.astro";
import Container from "@components/Container.astro";
import Layout from "@layouts/Layout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blog", ({ data }) => !data.draft);

  // Get unique tags
  const tags = [...new Set(posts.flatMap((post) => post.data.tags || []))];

  // Create paths for each tag
  return tags.map((tag) => ({
    params: { id: tag },
    props: {
      posts: posts.filter((post) => post.data.tags?.includes(tag)),
    },
  }));
}

const { id } = Astro.params;
const { posts } = Astro.props;

// Sort posts by date, most recent first
const sortedPosts = posts.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
);
---

<Layout title={`Tag: ${id}`} description={`Posts with the tag: ${id}`}>
  <div class="pt-24 pb-24">
    <Container>
      <div class="space-y-10" data-pagefind-ignore>
        <div class="animate">
          <BackToPrevious href="/tags"> All tags </BackToPrevious>
        </div>
        <div class="animate space-y-4">
          <h1
            class="text-4xl leading-[0.85] font-black tracking-tighter text-black uppercase md:text-6xl lg:text-7xl"
          >
            {id}
          </h1>
          <div class="font-mono text-xs tracking-wider text-gray-600 uppercase">
            Posts tagged with "{id}"
          </div>
        </div>
        <ul class="animate flex flex-col gap-4">
          {sortedPosts.map((post) => <ArrowCard entry={post} />)}
        </ul>
      </div>
    </Container>
  </div>
</Layout>
