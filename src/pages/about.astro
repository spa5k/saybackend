---
import Advertise from "@components/Advertise.astro";
import Container from "@components/Container.astro";
import { ABOUT } from "@consts";
import Layout from "@layouts/Layout.astro";
import pfp from "@components/pfp.png";
---

<Layout title={ABOUT.TITLE} description={ABOUT.DESCRIPTION}>
  <!-- Structured Data -->
  <script
    type="application/ld+json"
    set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "Person",
          "@id": "https://www.saybackend.com/#author",
          name: "Kamran Tahir",
          jobTitle: "Senior Software Engineer",
          description:
            "Senior Software Engineer specializing in backend systems, AWS serverless architecture, PostgreSQL, and DevOps with 6+ years of experience",
          image: new URL(pfp.src, Astro.site).href,
          url: "https://www.saybackend.com/about/",
          sameAs: [
            "https://github.com/spa5k",
            "https://linkedin.com/in/kamrantahir2",
            "http://kamran.sh/",
          ],
          email: "hello@kamran.sh",
          knowsLanguage: ["en"],
          worksFor: {
            "@id": "https://www.saybackend.com/#organization",
          },
          hasOccupation: [
            {
              "@type": "Occupation",
              name: "Senior Software Engineer",
              skills: [
                "Backend Engineering",
                "AWS Serverless",
                "PostgreSQL",
                "Kubernetes",
                "DevOps",
              ],
            },
          ],
          knowsAbout: [
            "Backend Development",
            "AWS Serverless",
            "PostgreSQL",
            "Kubernetes",
            "Docker",
            "Go Programming",
            "Node.js",
            "TypeScript",
            "Microservices",
            "DevOps",
          ],
        },
        {
          "@type": "BreadcrumbList",
          itemListElement: [
            {
              "@type": "ListItem",
              position: 1,
              name: "Home",
              item: "https://www.saybackend.com/",
            },
            {
              "@type": "ListItem",
              position: 2,
              name: "About",
              item: "https://www.saybackend.com/about/",
            },
          ],
        },
      ],
    })}
  />
  <div class="pt-24">
    <Container>
      <div class="animate my-10 space-y-10">
        <h1
          class="text-foreground text-4xl leading-[0.85] font-black tracking-tighter uppercase md:text-6xl lg:text-7xl"
        >
          About
        </h1>

        <div
          class="border-border grid gap-6 border-y py-6 md:grid-cols-[auto,1fr] md:items-start"
        >
          <img
            src={pfp.src}
            width={pfp.width}
            height={pfp.height}
            alt="Kamran Tahir"
            loading="lazy"
            decoding="async"
            class="border-structural h-20 w-20 border object-cover md:h-24 md:w-24"
          />
          <p
            class="text-muted-foreground max-w-3xl font-mono text-sm leading-relaxed md:text-base"
          >
            I’m Kamran Tahir, a Senior Software Engineer. I build scalable
            backend systems, event-driven pipelines, and pragmatic
            infrastructure on AWS.
          </p>

          <div
            class="flex flex-wrap gap-3 font-mono text-xs tracking-wider uppercase"
          >
            <a
              href="mailto:hello@kamran.sh"
              class="border-structural bg-accent text-accent-foreground hover:border-accent-strong inline-flex h-12 items-center border px-6 transition-colors"
            >
              Email
            </a>
            <a
              href="http://kamran.sh/"
              class="border-structural hover:bg-foreground hover:text-background inline-flex h-12 items-center border px-6 transition-colors"
              target="_blank"
              rel="noreferrer"
            >
              Resume
            </a>
            <a
              href="https://linkedin.com/in/kamrantahir2"
              class="border-structural hover:bg-foreground hover:text-background inline-flex h-12 items-center border px-6 transition-colors"
              target="_blank"
              rel="noreferrer"
            >
              LinkedIn
            </a>
          </div>
        </div>

        <div class="grid gap-10 md:grid-cols-2">
          <div>
            <h2 class="text-2xl leading-none font-black uppercase">Focus</h2>
            <ul class="text-muted-foreground mt-6 space-y-2 font-mono text-sm">
              <li>
                AWS serverless + microservices (API Gateway, Lambda, Kinesis,
                S3)
              </li>
              <li>
                Node.js, TypeScript, Go; clean interfaces and steady delivery
              </li>
              <li>PostgreSQL + data pipelines; performance and reliability</li>
            </ul>
          </div>

          <div>
            <h2 class="text-2xl leading-none font-black uppercase">
              Recent work
            </h2>
            <ul class="text-muted-foreground mt-6 space-y-2 font-mono text-sm">
              <li>Zeller — POS integrations (Go/Node/TypeScript/AWS)</li>
              <li>
                Shiba Inu — analytics pipeline at 100k+ events/min (AWS stack)
              </li>
              <li>
                GoKwik — payments + microservices migration; tests from 0% → 80%
              </li>
            </ul>
          </div>
        </div>

        <Advertise />
      </div>
    </Container>
  </div>
</Layout>
