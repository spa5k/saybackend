---
import Container from "@components/Container.astro";
import { SITE } from "@consts";
---

<header class="border-structural sticky top-0 z-50 border-b bg-white">
  <Container>
    <div class="flex h-16 items-center justify-between">
      <a
        href="/"
        class="text-xl font-black tracking-tighter uppercase transition-colors hover:text-blue-600"
      >
        {SITE.TITLE}
      </a>

      <nav class="flex items-center gap-8">
        <a
          href="/blog"
          class="font-mono text-sm tracking-widest uppercase transition-colors hover:text-blue-600"
        >
          Blog
        </a>
        <a
          href="/projects"
          class="font-mono text-sm tracking-widest uppercase transition-colors hover:text-blue-600"
        >
          Projects
        </a>
      </nav>
    </div>
  </Container>
</header>
