---
const { prevPost, nextPost } = Astro.props;
---

<div class="grid grid-cols-2 gap-1.5 sm:gap-3">
  {
    prevPost?.id ? (
      <a
        href={`/blog/${prevPost?.id}`}
        class="group flex flex-col gap-2 border border-black/20 bg-gray-50 p-4 no-underline transition-colors hover:bg-black hover:text-white"
      >
        <div class="font-mono text-xs tracking-widest text-gray-500 uppercase group-hover:text-gray-400">
          &larr; Previous Log
        </div>
        <div class="leading-tight font-bold uppercase">
          {prevPost?.data.title}
        </div>
      </a>
    ) : (
      <div />
    )
  }

  {
    nextPost?.id ? (
      <a
        href={`/blog/${nextPost?.id}`}
        class="group flex flex-col gap-2 border border-black/20 bg-gray-50 p-4 text-right no-underline transition-colors hover:bg-black hover:text-white"
      >
        <div class="font-mono text-xs tracking-widest text-gray-500 uppercase group-hover:text-gray-400">
          Next Log &rarr;
        </div>
        <div class="leading-tight font-bold uppercase">
          {nextPost?.data.title}
        </div>
      </a>
    ) : (
      <div />
    )
  }
</div>
