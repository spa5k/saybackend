---
const { prevPost, nextPost } = Astro.props;
---

<div class="grid grid-cols-2 gap-1.5 sm:gap-3">
  {
    prevPost?.id ? (
      <a
        href={`/blog/${prevPost?.id}`}
        class="group border-border/40 bg-surface hover:bg-foreground hover:text-background flex flex-col gap-2 border p-4 no-underline transition-colors hover:no-underline"
      >
        <div class="text-muted-foreground group-hover:text-background/70 font-mono text-xs tracking-widest uppercase">
          &larr; Previous Log
        </div>
        <div class="leading-tight font-bold uppercase">
          {prevPost?.data.title}
        </div>
      </a>
    ) : (
      <div />
    )
  }

  {
    nextPost?.id ? (
      <a
        href={`/blog/${nextPost?.id}`}
        class="group border-border/40 bg-surface hover:bg-foreground hover:text-background flex flex-col gap-2 border p-4 text-right no-underline transition-colors hover:no-underline"
      >
        <div class="text-muted-foreground group-hover:text-background/70 font-mono text-xs tracking-widest uppercase">
          Next Log &rarr;
        </div>
        <div class="leading-tight font-bold uppercase">
          {nextPost?.data.title}
        </div>
      </a>
    ) : (
      <div />
    )
  }
</div>
