---
interface Props {
  href: string;
  title: string;
  description?: string;
  label?: string;
  tag?: string;
  date?: Date;
  class?: string;
}

const {
  href,
  title,
  description,
  label,
  tag,
  date,
  class: className,
} = Astro.props;
---

<a
  href={href}
  class:list={[
    "group border-structural bg-surface hover:bg-foreground hover:text-background block border p-8 transition-all duration-200",
    className,
  ]}
>
  <div class="flex h-full flex-col justify-between gap-8">
    <div>
      {
        tag ? (
          <span class="tag-pill mb-4">{tag}</span>
        ) : (
          label && (
            <span class="font-label text-muted-foreground group-hover:text-background/70 mb-4 block opacity-70">
              {label}
            </span>
          )
        )
      }
      <h3
        class="group-hover:text-background mb-4 text-2xl leading-none font-black uppercase"
      >
        {title}
      </h3>
      {
        description && (
          <p class="text-muted-foreground group-hover:text-background/80 font-mono text-sm leading-relaxed">
            {description}
          </p>
        )
      }
    </div>

    {
      date && (
        <div class="border-border text-muted-foreground group-hover:border-background/70 group-hover:text-background/70 mt-auto border-t pt-4 font-mono text-xs">
          {date.toLocaleDateString("en-US", {
            year: "numeric",
            month: "short",
            day: "numeric",
          })}
        </div>
      )
    }
  </div>
</a>
