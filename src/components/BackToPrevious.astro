---
type Props = {
  href: string;
};

const { href } = Astro.props;
---

<a
  href={href}
  class="group border-accent bg-accent text-accent-foreground hover:border-accent-strong hover:bg-accent-strong inline-flex items-center gap-2 border px-4 py-2 font-mono text-xs tracking-wider uppercase transition-colors"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    class="size-3 fill-none stroke-current stroke-2"
  >
    <polyline points="15 18 9 12 15 6"></polyline>
  </svg>
  <slot />
</a>
