---
interface Props {
  type?: "info" | "warning" | "default";
  title?: string;
}

const { type = "default", title } = Astro.props;
---

<div class={`callout callout-${type}`}>
  {title && <h3 class="callout-title">{title}</h3>}
  <div class="callout-content">
    <slot />
  </div>
</div>

<style>
  .callout {
    padding: 1.25rem;
    border-radius: calc(var(--radius) - 2px);
    margin: 1.5rem 0;
    transition:
      border-color 0.2s ease,
      background-color 0.2s ease;
    border: 1px solid var(--color-border);
    background-color: var(--color-card);
    color: var(--color-foreground);
  }

  .callout-info {
    background-color: var(--color-surface);
    border-left: 4px solid var(--color-accent);
  }

  .callout-warning {
    background-color: var(--color-surface);
    border-left: 4px solid var(--color-destructive);
  }

  .callout-default {
    background-color: var(--color-surface);
    border-left: 4px solid var(--color-accent-strong);
  }

  .callout-title {
    margin-top: 0;
    margin-bottom: 0.5rem;
    font-size: 0.85rem;
    font-weight: 700;
    font-family: var(--font-mono);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--color-accent);
  }

  .callout-content {
    font-size: 0.95rem;
    line-height: 1.6;
    color: var(--color-foreground);
  }

  .callout-content :global(p) {
    margin: 0;
    color: var(--color-primary);
  }

  .callout-content :global(p + p) {
    margin-top: 0.5rem;
  }

  .callout-content :global(a) {
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
    border-bottom: 1px solid transparent;
  }

  .callout-content :global(a:hover) {
    border-bottom-color: currentColor;
  }

  .callout-content :global(strong) {
    color: var(--color-foreground);
    font-weight: 700;
  }
</style>
