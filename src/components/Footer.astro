---
import Container from "@components/Container.astro";
import { SITE } from "@consts";

const sitemapHref = import.meta.env.DEV
  ? "https://www.saybackend.com/sitemap-index.xml"
  : "/sitemap-index.xml";
---

<footer class="border-structural bg-background border-t py-12">
  <Container>
    <div
      class="flex flex-col items-start justify-between gap-8 md:flex-row md:items-center"
    >
      <div class="space-y-4">
        <h3
          class="flex items-center gap-2 text-xl font-black tracking-tight uppercase"
        >
          <svg
            aria-hidden="true"
            class="text-accent h-5 w-5"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 14 14"
            fill="none"
          >
            <path
              d="M13.5 7.5V13.5H0.5V0.5H5.5V7.5H13.5Z M0.5 3.5H13.5 M10 7.5V0.5"
              stroke="currentColor"
              stroke-width="1.25"
              stroke-linecap="butt"
              stroke-linejoin="miter"
              stroke-miterlimit="10"></path>
          </svg>
          {SITE.TITLE}
        </h3>
        <p class="text-muted-foreground max-w-xs font-mono text-sm">
          Engineering blog exploring backend systems, DevOps, and structural
          data.
        </p>
      </div>

      <div class="flex flex-col items-start gap-2 md:items-end">
        <div class="flex gap-6 font-mono text-sm uppercase">
          <a href="/rss.xml" class="hover:text-accent">RSS</a>
          <a href={sitemapHref} class="hover:text-accent">Sitemap</a>
        </div>
        <p class="text-muted-foreground mt-4 font-mono text-xs opacity-70">
          &copy; {new Date().getFullYear()} SayBackend. Zero Rights Reserved.
        </p>
      </div>
    </div>
  </Container>
</footer>
