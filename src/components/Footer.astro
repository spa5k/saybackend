---
import Container from "@components/Container.astro";
import { SITE } from "@consts";
---

<footer class="border-structural border-t bg-white py-12">
  <Container>
    <div
      class="flex flex-col items-start justify-between gap-8 md:flex-row md:items-center"
    >
      <div class="space-y-4">
        <h3 class="text-xl font-black tracking-tight uppercase">
          {SITE.TITLE}
        </h3>
        <p class="max-w-xs font-mono text-sm text-gray-500">
          Engineering blog exploring backend systems, DevOps, and structural
          data.
        </p>
      </div>

      <div class="flex flex-col items-start gap-2 md:items-end">
        <div class="flex gap-6 font-mono text-sm uppercase">
          <a href="/rss.xml" class="hover:text-blue-600">RSS</a>
          <a href="/sitemap-index.xml" class="hover:text-blue-600">Sitemap</a>
        </div>
        <p class="mt-4 font-mono text-xs text-gray-400">
          &copy; {new Date().getFullYear()} SayBackend. Zero Rights Reserved.
        </p>
      </div>
    </div>
  </Container>
</footer>
