---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
  group?: boolean;
  class?: string;
};

const {
  href,
  external,
  underline = true,
  group = false,
  class: className,
  ...rest
} = Astro.props;
---

<a
  href={href}
  target={external ? "_blank" : "_self"}
  class={cn(
    "inline-block font-mono text-sm uppercase tracking-wider text-black transition-colors duration-200 hover:text-[var(--color-accent)]",
    underline &&
      "underline underline-offset-4 decoration-1 decoration-gray-300 hover:decoration-[var(--color-accent)]",
    group && "group",
    className,
  )}
  {...rest}
>
  <slot />
</a>
