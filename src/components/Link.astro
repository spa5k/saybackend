---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
  group?: boolean;
  class?: string;
};

const {
  href,
  external,
  underline = false,
  group = false,
  class: className,
  ...rest
} = Astro.props;
---

<a
  href={href}
  target={external ? "_blank" : "_self"}
  class={cn(
    "inline-block font-mono text-sm uppercase tracking-wider text-black no-underline transition-colors duration-200 hover:text-[var(--color-accent)] hover:no-underline",
    underline && "no-underline",
    group && "group",
    className,
  )}
  {...rest}
>
  <slot />
</a>
