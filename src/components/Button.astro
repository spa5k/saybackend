---
interface Props {
  href?: string;
  variant?: "primary" | "secondary";
  class?: string;
  [key: string]: any;
}

const { href, variant = "primary", class: className, ...rest } = Astro.props;

const baseStyles =
  "hover-inverse border-structural flex h-14 items-center justify-center border px-8 font-bold tracking-widest uppercase transition-colors duration-200";

const variants = {
  primary:
    "bg-blue-600 text-white border-blue-600 hover:bg-black hover:text-white hover:border-black",
  secondary:
    "bg-white text-black border-gray-300 hover:bg-black hover:text-white hover:border-black",
};

// Use CSS variables for colors to match the design system exactly
const style =
  variant === "primary"
    ? "background-color: var(--color-accent); color: white; border-color: var(--color-accent);"
    : "background-color: var(--color-background); color: var(--color-primary); border-color: var(--color-primary);";

const Element = href ? "a" : "button";
---

<Element
  href={href}
  class:list={[baseStyles, className]}
  style={style}
  {...rest}
>
  <slot />
</Element>
