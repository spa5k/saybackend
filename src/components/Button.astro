---
interface Props {
  href?: string;
  variant?: "primary" | "secondary";
  class?: string;
  [key: string]: any;
}

const { href, variant = "primary", class: className, ...rest } = Astro.props;

const baseStyles =
  "border-structural flex h-14 items-center justify-center border px-8 font-bold tracking-widest uppercase transition-colors duration-200 hover:bg-[#0047cc] hover:border-[#0047cc]";

// Use CSS variables for colors to match the design system exactly
const style =
  "background-color: var(--color-accent); color: white; border-color: var(--color-accent);";

const Element = href ? "a" : "button";
---

<Element
  href={href}
  class:list={[baseStyles, className]}
  style={style}
  {...rest}
>
  <slot />
</Element>
