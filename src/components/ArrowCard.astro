---
import type { CollectionEntry } from "astro:content";

type Props = {
  entry: CollectionEntry<"blog"> | CollectionEntry<"projects">;
};

const { entry } = Astro.props as {
  entry: CollectionEntry<"blog"> | CollectionEntry<"projects">;
};

const primaryTag =
  entry.collection === "blog" ? entry.data.tags?.[0] : undefined;
---

<a
  href={`/${entry.collection}/${entry.id.replace(/\/index$/, "")}`}
  class="group border-structural bg-surface hover:bg-foreground hover:text-background block border p-6 transition-colors duration-200"
>
  <div class="flex flex-col gap-4">
    <div class="flex items-start justify-between">
      <h3
        class="group-hover:text-background text-xl leading-none font-black tracking-tight uppercase"
      >
        {entry.data.title}
      </h3>
      {
        entry.collection === "blog" && entry.data.wip && (
          <span class="border-border group-hover:border-background group-hover:text-background border px-1 font-mono text-[10px] uppercase">
            WIP
          </span>
        )
      }
    </div>

    <p
      class="text-muted-foreground group-hover:text-background/80 line-clamp-2 font-mono text-sm leading-relaxed"
    >
      {entry.data.description}
    </p>

    <div class="mt-2 flex items-center gap-2">
      {
        entry.collection === "blog" ? (
          primaryTag && <span class="tag-pill">{primaryTag}</span>
        ) : (
          <>
            <span class="font-label text-muted-foreground group-hover:text-background/70 opacity-70">
              {entry.collection === "blog" ? "FIG" : "SYS"}
              {entry.data.date.getFullYear().toString().slice(-2)}
            </span>
            <div class="bg-border group-hover:bg-background/70 h-px w-8" />
          </>
        )
      }
    </div>
  </div>
</a>
